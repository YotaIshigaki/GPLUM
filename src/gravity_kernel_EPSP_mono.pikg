EPI F64vec   xi:pos
EPI F32      eps2:eps2

EPJ F64vec   xj:pos
EPJ F32      mj:mass

FORCE F32vec af:acc
FORCE F32    pf:phi

EPI local F32vec xiloc
EPJ local F32vec xjloc

xiloc = xi - xi[0]
xjloc = xj - xi[0]

rij = xjloc - xiloc
r2  = rij * rij + eps2

r_inv  = rsqrt(r2)
m_r = mj * r_inv
m_r3 = m_r * r_inv * r_inv

af += m_r3 * rij 
pf -= m_r
